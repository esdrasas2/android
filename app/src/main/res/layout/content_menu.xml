            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"

            android:paddingTop="10dp"
            android:textColor="@color/white"
            android:visibility="visible" />
    </LinearLayout>

